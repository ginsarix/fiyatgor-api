    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.7",
    "node-cron": "^4.2.1",
    "pg": "^8.17.2",
    "redis": "^5.10.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
